<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="htwg.trackingapp.AddRating"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newRatingTitleEditText"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:hint="@string/capture"
            android:textColorHint="@color/textFieldHintColor" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newRatingRatingBar"
            android:numStars="5"
            android:rating="3" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/newRatingMultilineEditText"
            android:layout_gravity="center_horizontal"
            android:textColorHint="@color/textFieldHintColor"
            android:hint="@string/description"
            android:gravity="left"
            android:layout_marginTop="5dp" />
    </LinearLayout>
</RelativeLayout>
