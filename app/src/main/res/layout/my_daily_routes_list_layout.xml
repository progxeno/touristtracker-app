<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        android:background="@drawable/transport_image_button_style"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textVievMyRoutesDate"
            android:layout_gravity="top"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">

                <ImageView
                    android:layout_width="@dimen/dailyRoutesIconSize"
                    android:layout_height="@dimen/dailyRoutesIconSize"
                    android:id="@+id/imageViewMyRoutesWalk"
                    android:src="@drawable/walking"
                    android:baselineAlignBottom="false"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/textVievMyRoutesDistanceWalk"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">

                <ImageView
                    android:layout_width="@dimen/dailyRoutesIconSize"
                    android:layout_height="@dimen/dailyRoutesIconSize"
                    android:id="@+id/imageViewMyRoutesCar"
                    android:src="@drawable/car"
                    android:baselineAlignBottom="false"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/textVievMyRoutesDistanceCar"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">

                <ImageView
                    android:layout_width="@dimen/dailyRoutesIconSize"
                    android:layout_height="@dimen/dailyRoutesIconSize"
                    android:id="@+id/imageViewMyRoutesTrain"
                    android:src="@drawable/bus"
                    android:baselineAlignBottom="false"
                    android:focusableInTouchMode="false"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/textVievMyRoutesDistanceTrain"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="7dp"
                android:paddingRight="7dp">

                <ImageView
                    android:layout_width="@dimen/dailyRoutesIconSize"
                    android:layout_height="@dimen/dailyRoutesIconSize"
                    android:id="@+id/imageViewMyRoutesFerry"
                    android:src="@drawable/ship"
                    android:baselineAlignBottom="false"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000 km"
                    android:id="@+id/textVievMyRoutesDistanceFerry"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/textView"
                android:layout_gravity="left"
                android:layout_marginLeft="5dp" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarMyRoutes"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:indeterminate="false"
                android:progress="45" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 %"
                android:id="@+id/currentProgressTextView"
                android:layout_gravity="right"
                android:layout_marginRight="5dp" />
        </LinearLayout>

    </LinearLayout>


</GridLayout>